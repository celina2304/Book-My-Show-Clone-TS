{
  "compilerOptions": {
    "outDir": "./dist",  // Compiled files go here
    "rootDir": "./src",  // TypeScript files are here
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],  // Include all .ts files in src/
  "exclude": ["node_modules"]  // Exclude node_modules
}
