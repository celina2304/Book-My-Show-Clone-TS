{
    "version": 2,
    "builds": [
      {
        "src": "api/dist/index.js",       
        "use": "@vercel/node"
      },
      {
        "src": "client/dist/**/*",        
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",               
        "dest": "api/dist/index.js"
      },
      {
        "src": "/(.*)",                   
        "dest": "client/dist/$1"
      }
    ]
  }
  